# Alpha Gen Environment Configuration
# Copy this file to .env and fill in your values

# LLM Configuration (OpenAI-compatible API)
# Provider is inferred from LLM_BASE_URL:
#   - OpenRouter: https://openrouter.ai/api/v1
#   - Ollama: http://localhost:11434/v1
#   - No base_url defaults to OpenRouter (https://openrouter.ai/api/v1)
LLM_MODEL=openrouter/default
LLM_API_KEY=your-api-key-here
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
# Set base_url to override provider:
# LLM_BASE_URL=https://openrouter.ai/api/v1  # OpenRouter (default)
# LLM_BASE_URL=http://localhost:11434/v1      # Ollama

# Vector Store Configuration
# Options: chroma, pgvector
VECTOR_STORE_PROVIDER=chroma
VECTOR_STORE_DIR=./data/vector_store
VECTOR_STORE_COLLECTION=alpha_gen_docs
EMBEDDING_MODEL=all-MiniLM-L6-v2

# PostgreSQL + pgvector Configuration (only needed if VECTOR_STORE_PROVIDER=pgvector)
# POSTGRES_URL=postgresql://user:password@localhost:5432/alpha_gen

# Data Sources Configuration
# Alpha Vantage API (for market data, news sentiment, top gainers/losers)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here
ALPHA_VANTAGE_TIMEOUT=30
# Rate limit: minimum seconds between API requests (free tier: 1 req/sec, premium: 0.1 or less)
ALPHA_VANTAGE_RATE_LIMIT_INTERVAL=1.2
# Custom base URL (defaults to https://www.alphavantage.co/query)
# ALPHA_VANTAGE_BASE_URL=https://custom-api.example.com/query

# Technical Indicators Configuration
# Enable/disable specific technical indicators and configure their parameters
# Each indicator can be configured with:
#   - ENABLED: true/false to enable/disable the indicator
#   - TIME_PERIOD: number of data points for calculation (default: 14)
#   - SERIES_TYPE: price type - close, open, high, low (default: close)
#   - INTERVAL: time interval - daily, weekly, monthly (default: daily)

# Moving Averages
ALPHA_VANTAGE_INDICATOR_SMA_ENABLED=true
ALPHA_VANTAGE_INDICATOR_SMA_TIME_PERIOD=20
ALPHA_VANTAGE_INDICATOR_SMA_SERIES_TYPE=close
ALPHA_VANTAGE_INDICATOR_SMA_INTERVAL=daily

# ALPHA_VANTAGE_INDICATOR_EMA_ENABLED=true
# ALPHA_VANTAGE_INDICATOR_EMA_TIME_PERIOD=12
# ALPHA_VANTAGE_INDICATOR_EMA_SERIES_TYPE=close
# ALPHA_VANTAGE_INDICATOR_EMA_INTERVAL=daily

# Momentum Indicators
ALPHA_VANTAGE_INDICATOR_RSI_ENABLED=true
ALPHA_VANTAGE_INDICATOR_RSI_TIME_PERIOD=14
ALPHA_VANTAGE_INDICATOR_RSI_SERIES_TYPE=close
ALPHA_VANTAGE_INDICATOR_RSI_INTERVAL=daily

# ALPHA_VANTAGE_INDICATOR_MACD_ENABLED=true
# ALPHA_VANTAGE_INDICATOR_MACD_SERIES_TYPE=close
# ALPHA_VANTAGE_INDICATOR_MACD_INTERVAL=daily

# ALPHA_VANTAGE_INDICATOR_STOCH_ENABLED=true
# ALPHA_VANTAGE_INDICATOR_STOCH_INTERVAL=daily

# Volatility Indicators
# ALPHA_VANTAGE_INDICATOR_BBANDS_ENABLED=true
# ALPHA_VANTAGE_INDICATOR_BBANDS_TIME_PERIOD=20
# ALPHA_VANTAGE_INDICATOR_BBANDS_SERIES_TYPE=close
# ALPHA_VANTAGE_INDICATOR_BBANDS_INTERVAL=daily

# ALPHA_VANTAGE_INDICATOR_ATR_ENABLED=true
# ALPHA_VANTAGE_INDICATOR_ATR_TIME_PERIOD=14
# ALPHA_VANTAGE_INDICATOR_ATR_INTERVAL=daily

# Trend Indicators
