# ALPHA_VANTAGE_INDICATOR_ADX_TIME_PERIOD=14
# ALPHA_VANTAGE_INDICATOR_ADX_INTERVAL=daily

# ALPHA_VANTAGE_INDICATOR_AROON_ENABLED=true
# ALPHA_VANTAGE_INDICATOR_AROON_TIME_PERIOD=14
