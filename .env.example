# Volume Indicators
# ALPHA_VANTAGE_INDICATOR_OBV_ENABLED=true
# ALPHA_VANTAGE_INDICATOR_OBV_INTERVAL=daily

# ALPHA_VANTAGE_INDICATOR_AD_ENABLED=true
# ALPHA_VANTAGE_INDICATOR_AD_INTERVAL=daily

# Observability (LangFuse)
LANGFUSE_ENABLED=true
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Output Configuration
# Directory where markdown reports are saved when using --save flag
OUTPUT_DIR=.out

# Output Formatting (optional)
# By default, output uses colors without boxes for clean, readable output
# NO_COLOR=1        # Disable all colors (plain text only)
# PLAIN_OUTPUT=1    # Alternative to NO_COLOR
