# ============================================================================
# Concourse CI Credentials for Alpha Gen
# ============================================================================
#
# SETUP INSTRUCTIONS:
# 1. Copy this file: cp ci/credentials.yml.example ci/credentials.yml
# 2. Fill in your actual values below
# 3. NEVER commit ci/credentials.yml to version control!
#
# ============================================================================

# ----------------------------------------------------------------------------
# Git Repository (SSH)
# ----------------------------------------------------------------------------
# Use SSH for secure, key-based authentication

git_uri: git@github.com:your-org/alpha-gen.git

# SSH private key for git access (deployment key or personal SSH key)
# Generate with: ssh-keygen -t ed25519 -C "concourse-ci@alpha-gen"
# Add public key to GitHub: Settings > Deploy keys (for repo) or SSH keys (for user)
git_private_key: |
  -----BEGIN OPENSSH PRIVATE KEY-----
  YOUR_SSH_PRIVATE_KEY_HERE
  -----END OPENSSH PRIVATE KEY-----

# ----------------------------------------------------------------------------
# Container Registry
# ----------------------------------------------------------------------------
# Docker repository (full path including registry)
docker_repository: registry.example.com/your-org/alpha-gen

# Registry credentials
registry_username: your-registry-username
registry_password: your-registry-password

# Examples:
#   Docker Hub:       docker_repository: your-username/alpha-gen
#   GitHub Registry:  docker_repository: ghcr.io/your-org/alpha-gen
#   GitLab Registry:  docker_repository: registry.gitlab.com/your-group/alpha-gen
#   Harbor:           docker_repository: harbor.example.com/library/alpha-gen

# ----------------------------------------------------------------------------
# Cosign Image Signing
# ----------------------------------------------------------------------------
# Generate keys with: ./ci/generate-cosign-keys.sh
# Or manually: cosign generate-key-pair

cosign_private_key: |
  -----BEGIN ENCRYPTED COSIGN PRIVATE KEY-----
  YOUR_COSIGN_PRIVATE_KEY_HERE
  -----END ENCRYPTED COSIGN PRIVATE KEY-----

cosign_public_key: |
  -----BEGIN PUBLIC KEY-----
  YOUR_COSIGN_PUBLIC_KEY_HERE
  -----END PUBLIC KEY-----

# Password used when generating the cosign key pair
cosign_password: your-cosign-key-password

# ============================================================================
# SECURITY NOTES:
# ============================================================================
# - Never commit this file with real credentials
# - Use deploy keys (read-only) instead of personal SSH keys when possible
# - Rotate credentials regularly
# - Keep credentials.yml permissions restricted: chmod 600 ci/credentials.yml
# - For production, consider using Vault or Credhub for secret management
# ============================================================================
